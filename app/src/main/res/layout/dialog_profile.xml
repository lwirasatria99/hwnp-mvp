<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_cornerfull_white_profile"
    android:orientation="vertical"
    android:theme="@style/AppThemeFont"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Circle Image -->
        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/profile_default_picture"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/fab_about"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/ic_aboutapps"
            tools:ignore="ContentDescription" />

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab_about"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginEnd="20dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:backgroundTint="@color/purple"-->
        <!--android:focusable="true"-->
        <!--app:borderWidth="0dp"-->
        <!--app:elevation="6dp"-->
        <!--app:fabSize="normal"-->
        <!--app:pressedTranslationZ="12dp"-->
        <!--app:rippleColor="@color/colorPrimary"-->
        <!--app:srcCompat="@drawable/ic_aboutapps"-->
        <!--tools:targetApi="lollipop" />-->

    </FrameLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="3dp"
            android:id="@+id/linear_change_password"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/square_cornerfull_blue"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:targetApi="lollipop">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:focusable="false"
                app:srcCompat="@drawable/ic_profile_lock"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:focusable="false"
                android:textSize="12sp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="CHANGE PASSWORD"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:id="@+id/linear_feedback"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/square_cornerfull_blue"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:targetApi="lollipop">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:focusable="false"
                app:srcCompat="@drawable/ic_profile_phone_white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:focusable="false"
                android:textSize="12sp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Feedback"
                android:textAllCaps="true"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/grey_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="15dp"
        android:paddingStart="20dp">

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_name"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Name"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_profile_size"
                android:layout_height="@dimen/ic_profile_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_id"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="ID"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <!--Position-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_profile_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_profile_size"
                android:layout_height="@dimen/ic_profile_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_position"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Position"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_profile_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_profile_size"
                android:layout_height="@dimen/ic_profile_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_email"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Email"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_profile_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_profile_size"
                android:layout_height="@dimen/ic_profile_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_mobile"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Mobile"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_profile_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_profile_size"
                android:layout_height="@dimen/ic_profile_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile_phone"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_icon_totext"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Phone"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_logout"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_cornerfull_red"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:focusable="false"
                app:srcCompat="@drawable/ic_logout_door"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:focusable="false"
                android:fontFamily="@font/ubuntu_bold"
                android:text="LOGOUT"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>